<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <Button
        android:onClick="onClickAuth"
        android:id="@+id/mAuth_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AuthButton"
        />
    <Button
        android:onClick="onClickDeleteAuth"
        android:id="@+id/mDeleteAuth_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DeliteAuth"
        />
    <Button
        android:id="@+id/mUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserInfo"
        android:onClick="onClickUserInfo"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserInfo = "
            />
<TextView
    android:id="@+id/mAuth_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    </LinearLayout>
</LinearLayout>
</ScrollView>